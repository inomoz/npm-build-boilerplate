{
  "name": "npm-build-boilerplate",
  "version": "1.2.0",
  "description": "A set of common build tasks written with npm scripts.",
  "author": "Damon Bauer <hello@damonbauer.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damonbauer/npm-build-boilerplate"
  },
  "bugs": "https://github.com/damonbauer/npm-build-boilerplate/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "postcss": "postcss -c postcss.config.js -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "sass": "node-sass --indented-syntax --output-style compressed -o dist/css src/sass",
    "lint": "eslint src/js || true",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "lint-sass": "stylelint src/sass/*.sass --syntax sass || true",
    "uglify": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin src/img/* -o dist/img",
    "icons": "svgo -f src/img/icons -o dist/images/icons && svg-sprite-generate -d dist/images/icons -o dist/images/icons/sprite.svg",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:scss": "npm run lint-scss && npm run scss && npm run postcss",
    "build:sass": "npm run lint-sass && npm run sass && npm run postcss",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin && npm run icons",
    "build:all": "npm run build:sass && npm run build:js && npm run build:images",
    "watch:scss": "onchange \"src/scss\" -- npm run build:scss",
    "watch:sass": "onchange \"src/sass\" -- npm run build:sass",
    "watch:js": "onchange \"src/js\" -- npm run build:js",
    "watch:images": "onchange \"src/img\" -- npm run build:images",
    "watch:all": "npm-run-all -p serve watch:sass watch:js watch:images",
    "postinstall": "npm run build:all && npm run watch:all"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^3.1.1",
    "postcss-pxtorem": "^4.0.0",
    "rimraf": "^2.5.4",
    "stylelint": "^7.8.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.6",
    "uglify-js": "^2.6.2"
  }
}
